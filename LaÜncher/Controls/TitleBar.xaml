<UserControl x:Class="USoftware_HUb.Controls.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:USoftware_HUb.MVVM.ViewModel"
             Height="32"
             Background="#FF131313">

    <!--<UserControl.DataContext>
        <viewModel:MainViewModel/>
    </UserControl.DataContext>-->

    <Border Background="#FF131313"
            BorderBrush="#FF262626"
            BorderThickness="0,0,0,1"
            SnapsToDevicePixels="True"
            MouseDown="TitleBar_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="36"/>
                    <ColumnDefinition Width="50"/>
                    <!-- Przerwa -->
                    <ColumnDefinition Width="10"/>
                    <!-- Przyciski użytkowe -->
                    <ColumnDefinition MinWidth="70" Width="Auto"/>
                    <ColumnDefinition MinWidth="90" Width="Auto"/>
                    <ColumnDefinition MinWidth="60" Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="/Assets/LOGO_U.png"
                       Grid.Column="0"
                       Width="32"
                       Height="32"
                       Margin="2,0,2,0"/>

                <TextBlock Text="HÜB"
                           Grid.Column="1"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="14"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="3" Content="🛒SKLEP" Style="{StaticResource TitleLabelButtonStyle}" Command="{Binding ShopCommand}"/>
                <Button Grid.Column="4" Content="📱APLIKACJE" Style="{StaticResource TitleLabelButtonStyle}" Command="{Binding AppCommand}"/>
                <Button Grid.Column="5" Content="🎮GRY" Style="{StaticResource TitleLabelButtonStyle}" Command="{Binding GameCommand}"/>
                
            </Grid>

            <Grid Grid.Column="1" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1"/>
                    <!-- Grupa: logowanie + pomoc -->
                    <ColumnDefinition Width="42"/>
                    <ColumnDefinition Width="42"/>
                    <ColumnDefinition Width="42"/>
                    <ColumnDefinition Width="1"/>
                    <!-- Grupa: sterowanie oknem -->
                    <ColumnDefinition Width="42"/>
                    <ColumnDefinition Width="42"/>
                    <ColumnDefinition Width="42"/>
                </Grid.ColumnDefinitions>

                <Rectangle Grid.Column="0" Height="32" Fill="#FF262626" VerticalAlignment="Center"/>

                <Button Grid.Column="1" Content="👤" Style="{StaticResource TitleButtonStyle}" Command="{Binding ProfileCommand}" ToolTip="Profil"/>
                <Button Grid.Column="2" Content="🛠️" Style="{StaticResource TitleButtonStyle}" Command="{Binding SettingsCommand}" ToolTip="Ustawienia"/>
                <Button Grid.Column="3" Content="❔" Style="{StaticResource TitleButtonStyle}" Command="{Binding HelpCommand}" ToolTip="Pomoc"/>

                <Rectangle Grid.Column="4" Height="32" Fill="#FF262626" VerticalAlignment="Center"/>

                <Button Grid.Column="5" Content="—" Style="{StaticResource TitleButtonStyle}" Command="{Binding MinimizeCommand}"/>
                <Button Grid.Column="6" Content="⬜" Style="{StaticResource TitleButtonStyle}" Command="{Binding MaximizeCommand}"/>
                <Button Grid.Column="7" Content="✖" Style="{StaticResource TitleButtonExitStyle}" Command="{Binding CloseCommand}"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>