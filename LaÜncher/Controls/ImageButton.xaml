<UserControl x:Class="USoftware_HUb.Controls.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:USoftware_HUb.Controls">

    <Button Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
            BorderThickness="0"
            Style="{StaticResource HelpLogoButton}">
        <Grid>
            <Image Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Stretch="Uniform"
                   Margin="4"/>
        </Grid>
    </Button>

</UserControl>
