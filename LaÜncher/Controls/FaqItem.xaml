<UserControl x:Class="USoftware_HUb.Controls.FaqItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:USoftware_HUb.Controls">

    
    <Border Background="#FF2A2A2A" CornerRadius="6" Padding="10" Margin="0,5">
        <StackPanel>
            <TextBlock Text="{Binding Question}" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Foreground="White" 
                       TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Answer}" 
                       FontSize="14" 
                       Foreground="#FFCCCCCC" 
                       Margin="0,5,0,0" 
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Border>

</UserControl>
