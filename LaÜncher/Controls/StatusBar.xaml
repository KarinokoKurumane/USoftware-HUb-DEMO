<UserControl x:Class="USoftware_HUb.Controls.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:USoftware_HUb.Controls"
             xmlns:converters="clr-namespace:USoftwareHUB.Converters;assembly=USoftwareHUB"
             xmlns:viewModel="clr-namespace:USoftware_HUb.MVVM.ViewModel"
             Height="32" Background="#FF1A1A1A">
    
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <!--<UserControl.DataContext>
        <viewModel:MainViewModel/>
    </UserControl.DataContext>-->


    <Border BorderThickness="1,0,0,0"
            Background="#FF2F2F2F">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Przycisk dodania produktu -->
            <Button Grid.Column="0"
                    Content="➕ Dodaj produkt"
                    Command="{Binding AddProductCommand}"
                    Style="{StaticResource AddButtonStyle}"
                    Margin="10,0" Height="24" VerticalAlignment="Center"/>

            <!-- Pasek postępu -->
            <ProgressBar Grid.Column="1"
                         Height="6"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"
                         Value="{Binding DownloadProgress}"
                         Maximum="100"
                         Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibilityConverter}}"
                         Background="#FF252525"
                         BorderBrush="{x:Null}"/>
        </Grid>
    </Border>
</UserControl>