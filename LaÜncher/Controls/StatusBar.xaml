<UserControl x:Class="USoftware_HUb.Controls.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:USoftware_HUb.Controls"
             xmlns:converters="clr-namespace:USoftwareHUB.Converters;assembly=USoftwareHUB"
             xmlns:viewModel="clr-namespace:USoftware_HUb.MVVM.ViewModel"
             Height="32" Background="#FF1A1A1A">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>


    <Border BorderThickness="1,0,0,0"
            Background="#FF2F2F2F">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <!-- Popup z opcjami -->
                <Popup x:Name="AddOptionsPopup"
                       Placement="Top"
                       PlacementTarget="{Binding ElementName=AddProductButton}"
                       StaysOpen="False"
                       AllowsTransparency="True"
                       PopupAnimation="Slide">
                    <Border Background="#FF2A2A2A" CornerRadius="4" Padding="6">
                        <StackPanel>
                            <Button Content="📱Dodaj aplikację"
                                    Command="{Binding AddProductCommand}"
                                    CommandParameter="app"
                                    Style="{StaticResource AddButtonStyle}"
                                    Margin="2"/>
                            <Button Content="🎮Dodaj grę"
                                    Command="{Binding AddProductCommand}"
                                    CommandParameter="game"
                                    Style="{StaticResource AddButtonStyle}"
                                    Margin="2"/>
                        </StackPanel>
                    </Border>
                </Popup>

                <!-- Przycisk dodania produktu -->
                <Button x:Name="AddProductButton"
                        Grid.Column="0"
                        Content="➕ Dodaj produkt"
                        Style="{StaticResource AddButtonStyle}"
                        Margin="10,0"
                        Height="24"
                        VerticalAlignment="Center"
                        Click="AddProductButton_Click"/>
            </Grid>


            <!-- Pasek postępu -->
            <ProgressBar Grid.Column="1"
                         Height="6"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"
                         Value="{Binding DownloadProgress}"
                         Maximum="100"
                         Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibilityConverter}}"
                         Background="#FF252525"
                         BorderBrush="{x:Null}"/>
        </Grid>
    </Border>
</UserControl>