<UserControl x:Class="USoftware_HUb.MVVM.Views.ProductDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:USoftware_HUb.MVVM.Views"
             xmlns:viewModel="clr-namespace:USoftware_HUb.MVVM.ViewModel">


    <Grid>
        <Grid.RowDefinitions>
            <!-- Obrazek produktu -->
            <RowDefinition Height="25*"/>
            <!-- Pasek grupy -->
            <RowDefinition Height="40"/>
            <!-- Opis produktu -->
            <RowDefinition Height="Auto"/>
            <!-- Wymagania, dane produktu, tagi -->
            <RowDefinition Height="45*"/>
            <!-- Dodatkowe informacje -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <!-- Obrazek jako tło -->
            <Grid.Background>
                <ImageBrush ImageSource="{Binding BannerImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Stretch="UniformToFill"/>
            </Grid.Background>

            <!-- Pasek działań -->
            <Grid Background="#BF656565"
                  Height="50"
                  VerticalAlignment="Bottom"
                  Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="▶ Uruchom"
                        Command="{Binding RunAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource MainGreenWideButtonStyle}"
                        Margin="5,0,5,0"
                        HorizontalAlignment="Left"/>

                <!--Czas spędzony w aplikacji-->
                <Grid Grid.Column="1" VerticalAlignment="Center" MinWidth="100" Margin="5,0,5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Czas uruchomienia:"
                               Grid.Row="0"
                               VerticalAlignment="Center"
                               Margin="5,0,5,0"
                               FontSize="16"
                               Foreground="White"/>
                    <TextBlock Text="24 Godziny"
                               Grid.Row="1"
                               VerticalAlignment="Center"
                               Margin="5,0,5,0"
                               FontSize="10"
                               Foreground="White"/>
                </Grid>
                
                <!--Ostatnie uruchomienie-->
                <Grid Grid.Column="2" VerticalAlignment="Center" MinWidth="100" Margin="5,0,5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Ostatnie uruchomienie:"
                               Grid.Row="0"
                               VerticalAlignment="Center"
                               Margin="5,0,5,0"
                               FontSize="16"
                               Foreground="White"/>
                    <TextBlock Text="12.09.1999"
                               Grid.Row="1"
                               VerticalAlignment="Center"
                               Margin="5,0,5,0"
                               FontSize="10"
                               Foreground="White"/>
                </Grid>
            </Grid>
        </Grid>

        

        <Grid Grid.Row="1" Background="#FF1A1A1A" Margin="6,0,6,0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="▶ Uruchom jako grupa"
                    Command="{Binding RunAsGroupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Style="{StaticResource MainGroupWideButtonStyle}"
                    Grid.Column="0"/>
            <Button Content="➕ Dodaj do grupy"
                    Command="{Binding AddToGroupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Style="{StaticResource MainAddGroupWideButtonStyle}"
                    Grid.Column="1"/>
            <Button Content="🗑️ Usuń z grupy"
                    Command="{Binding RemoveFromGroupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    Style="{StaticResource MainRemoveGroupWideButtonStyle}"
                    Grid.Column="2"/>
        </Grid>
        
        <Grid Grid.Row="2" Background="#FF1A1A1A" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="{Binding IconImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="100" Height="100" Margin="10"/>
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="{Binding ProductName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="{Binding ProductDescription, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3" Background="#FF1A1A1A" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="34*"/>
                <ColumnDefinition Width="33*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Wymagania:"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"/>
                <TextBlock Text="Spore"
                   FontSize="14"
                   Foreground="White"
                   TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Dane Produktu:"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Twórcy i takie tam"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="10">
                <TextBlock Text="Tagi:"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Przemoc (+18)"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="4" Background="#FF1A1A1A" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Aktualności:"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Nowości i inne cosie"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="N/A"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="N/A"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
