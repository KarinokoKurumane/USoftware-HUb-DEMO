<UserControl x:Class="USofware_HUb.MVVM.Views.ProductDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:USofware_HUb.MVVM.Views"
             xmlns:viewModel="clr-namespace:USofware_HUb.MVVM.ViewModel">

    <UserControl.DataContext>
        <viewModel:ProductDetailsViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Obrazek produktu -->
            <RowDefinition Height="20*"/>
            <!-- Pasek bazowy -->
            <RowDefinition Height="50"/>
            <!-- Pasek grupy -->
            <RowDefinition Height="40"/>
            <!-- Opis produktu -->
            <RowDefinition Height="Auto"/>
            <!-- Wymagania, dane produktu, tagi -->
            <RowDefinition Height="45*"/>
            <!-- Dodatkowe informacje -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0"
               Source="/Assets/nasterydachlogo.png" Stretch="Fill" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>

        <Grid Grid.Row="1" Background="#BF656565">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="▶ Uruchom"
                    Command="{Binding RunAppCommand}"
                    Style="{StaticResource MainGreenWideButtonStyle}"
                    Grid.Column="0"
                    Margin="5,0,5,0"
                    HorizontalAlignment="Left"/>

            <Grid Grid.Column="1" VerticalAlignment="Center" MinWidth="100" Margin="5,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Czas uruchomienia:"
                           Grid.Row="0"
                           VerticalAlignment="Center"
                           Margin="5,0,5,0"
                           FontSize="16"
                           Foreground="White"/>
                <TextBlock Text="24 Godziny"
                            Grid.Row="1"
                            VerticalAlignment="Center"
                            Margin="5,0,5,0"
                            FontSize="10"
                            Foreground="White"/>
            </Grid>

            <Grid Grid.Column="2" VerticalAlignment="Center" MinWidth="100" Margin="5,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Ostatnie uruchomienie:"
                           Grid.Row="0"
                           VerticalAlignment="Center"
                           Margin="5,0,5,0"
                           FontSize="16"
                           Foreground="White"/>
                <TextBlock Text="12.09.1999"
                           Grid.Row="1"
                           VerticalAlignment="Center"
                           Margin="5,0,5,0"
                           FontSize="10"
                           Foreground="White"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Background="#FF1A1A1A" Margin="6,0,6,0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="▶ Uruchom jako grupa"
                    Command="{Binding RunAsGroupCommand}"
                    Style="{StaticResource MainGroupWideButtonStyle}"
                    Grid.Column="0"/>
            <Button Content="➕ Dodaj do grupy"
                    Command="{Binding AddToGroupCommand}"
                    Style="{StaticResource MainAddGroupWideButtonStyle}"
                    Grid.Column="1"/>
            <Button Content="🗑️ Usuń z grupy"
                    Command="{Binding RemoveFromGroupCommand}"
                    Style="{StaticResource MainRemoveGroupWideButtonStyle}"
                    Grid.Column="2"/>
        </Grid>
        
        <Grid Grid.Row="3" Background="#FF1A1A1A" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Assets/nasterydachlogo.png" Width="100" Height="100" Margin="10"/>
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Nastery Dach"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Opis produktu: To jest przykładowy opis produktu, który może być dłuższy i zawierać więcej informacji."
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="4" Background="#FF1A1A1A" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="34*"/>
                <ColumnDefinition Width="33*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Wymagania:"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"/>
                <TextBlock Text="Spore"
                   FontSize="14"
                   Foreground="White"
                   TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Dane Produktu:"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Twórcy i takie tam"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="10">
                <TextBlock Text="Tagi:"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Przemoc (+18)"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="5" Background="#FF1A1A1A" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Aktualności:"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="Nowości i inne cosie"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="N/A"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                <TextBlock Text="N/A"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
