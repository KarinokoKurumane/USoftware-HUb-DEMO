<Window x:Class="USoftware_HUb.MVVM.Views.AddProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj produkt"
        Style="{StaticResource LoginWindow}"
        Foreground="White"
        FontFamily="Bahnschrift"
        Height="480"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Typ produktu -->
            <TextBlock Grid.Row="0" Text="{Binding ProductTypeLabel}" FontWeight="Bold" FontSize="14"/>

            <!-- Nazwa produktu -->
            <StackPanel Grid.Row="1" Margin="0,10,0,0">
                <TextBlock Text="Nazwa produktu:" Margin="0,0,0,5"/>
                <TextBox Text="{Binding ProductName}" />
            </StackPanel>

            <!-- Opis produktu -->
            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <TextBlock Text="Opis produktu:" Margin="0,0,0,5"/>
                <TextBox Text="{Binding ProductDescription}" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Ścieżka do pliku -->
            <StackPanel Grid.Row="3" Margin="0,10,0,0">
                <TextBlock Text="Plik wykonywalny (.exe):" Margin="0,0,0,5"/>
                <DockPanel>
                    <TextBox Text="{Binding ExecutablePath}" Width="260" Margin="0,0,10,0"/>
                    <Button Content="📂" Command="{Binding BrowseExecutableCommand}" Style="{StaticResource WideButtonStyle}" Width="30" Height="20"/>
                </DockPanel>
            </StackPanel>

            <!-- Ikona -->
            <StackPanel Grid.Row="4" Margin="0,10,0,0">
                <TextBlock Text="Ikona produktu:" Margin="0,0,0,5"/>
                <DockPanel>
                    <TextBox Text="{Binding IconPath}" Width="260" Margin="0,0,10,0"/>
                    <Button Content="🖼️" Command="{Binding BrowseIconCommand}" Style="{StaticResource WideButtonStyle}" Width="30" Height="20"/>
                </DockPanel>
            </StackPanel>

            <!-- Banner -->
            <StackPanel Grid.Row="5" Margin="0,10,0,0">
                <TextBlock Text="Grafika bannerowa:" Margin="0,0,0,5"/>
                <DockPanel>
                    <TextBox Text="{Binding BannerPath}" Width="260" Margin="0,0,10,0"/>
                    <Button Content="🖼️" Command="{Binding BrowseBannerCommand}" Style="{StaticResource WideButtonStyle}" Width="30" Height="20"/>
                </DockPanel>
            </StackPanel>

            <!-- Informacja o braku wsparcia -->
            <TextBlock Grid.Row="6" Text="⚠️ Produkty dodane inaczej niż przez oficjalny sklep nie są wspierane przez HÜB i ÜSoftware."
                       Foreground="OrangeRed" Margin="0,20,0,0" TextWrapping="Wrap" TextAlignment="Center"/>

            <!-- Przyciski akcji -->
            <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Zatwierdź" Command="{Binding ConfirmCommand}" Style="{StaticResource WideButtonStyle}" Margin="0,0,10,0"/>
                <Button Content="Anuluj" Command="{Binding CancelCommand}" Style="{StaticResource WideButtonStyle}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>