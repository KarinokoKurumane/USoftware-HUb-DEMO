<Window x:Class="USoftware_HUb.MVVM.Views.AddProductView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:USoftware_HUb.MVVM.Views"
        Title="AddProductView"
        Style="{StaticResource LoginWindow}"
        Foreground="White"
        FontFamily="Bahnschrift"
        Height="220"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Informacja o typie produktu -->
        <TextBlock Grid.Row="0" Text="{Binding ProductTypeLabel}" FontWeight="Bold" FontSize="14"/>

        <!-- Wybór pliku -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBlock Text="Ścieżka do pliku egzekucyjnego:" Margin="0,0,0,5"/>
            <DockPanel>
                <TextBox Text="{Binding ExecutablePath}" Width="260" Margin="0,0,10,0"/>
                <Button Content="📂"
                        Command="{Binding BrowseCommand}"
                        Style="{StaticResource WideButtonStyle}"
                        Width="30" 
                        Height="20"/>
            </DockPanel>
        </StackPanel>

        <!-- Informacja o braku wsparcia -->
        <TextBlock Grid.Row="2" Text="⚠️ Produkty dodane inaczej niż przez oficjalny sklep nie są wspierane przez HÜB i ÜSoftware."
                   Foreground="OrangeRed" Margin="0,20,0,0" TextWrapping="Wrap" TextAlignment="Center"/>

        <!-- Przyciski -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Anuluj"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource WideButtonStyle}"/>
            <Button Content="Zatwierdź"
                    Command="{Binding ConfirmCommand}"
                    Style="{StaticResource WideButtonStyle}"/>
        </StackPanel>
    </Grid>

</Window>
