<Window x:Class="USoftware_HUb.MVVM.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:USoftware_HUb.MVVM.Views"
        xmlns:viewModel="clr-namespace:USoftware_HUb.MVVM.ViewModel"
        Title="LaÜncher Logowanie"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource LoginWindow}">


    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <ScaleTransform x:Name="fadeScale"
                            ScaleX="0.8"
                            ScaleY="0.8"/>
        </Grid.RenderTransform>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="HÜB"
                       Foreground="White"
                       FontSize="30"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"
                       FontFamily="Bahnschrift SemiBold"/>

            <Border Style="{StaticResource LoginBorder}">
                <Button Content="Zaloguj się"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource WideButtonStyle}"
                        IsEnabled="False"/>
            </Border>
            <Border Style="{StaticResource LoginBorder}">
                <Button Content="Zarejestruj się"
                        Command="{Binding RegisterCommand}"
                        Style="{StaticResource WideButtonStyle}"
                        IsEnabled="False"/>
            </Border>
            <Border Style="{StaticResource LoginBorder}">
                <Button Content="Konto offline"
                        Command="{Binding OfflineCommand}"
                        Style="{StaticResource WideButtonStyle}"/>
            </Border>
            <Border Style="{StaticResource LoginBorder}">
                <Button Content="Wyjdź"
                        Command="{Binding QuitCommand}"
                        Style="{StaticResource WideButtonStyle}"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
