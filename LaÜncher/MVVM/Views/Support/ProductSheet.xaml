<UserControl x:Class="USoftware_HUb.MVVM.Views.Support.ProductSheet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:USoftware_HUb.MVVM.Views.Support"
             xmlns:viewModel="clr-namespace:USoftware_HUb.MVVM.ViewModel.Pages"
             Background="#1F242F">


    <Grid>
        <Grid.RowDefinitions>
            <!-- Obrazek produktu -->
            <RowDefinition Height="20*"/>
            <!-- Informacje / ustawienia -->
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <!-- Obrazek jako tło, zalecane 1500px+ x 330px, inaczej obrazek będzie wyglądał jak ... -->
            <Grid>
                <Viewbox>
                    <Image Source="{Binding BannerImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Stretch="UniformToFill"
                           RenderOptions.BitmapScalingMode="Fant"/>
                </Viewbox>
            </Grid>

            <!-- Pasek działań -->
            <Grid Background="#7F3E4753"
                  Height="50"
                  VerticalAlignment="Bottom"
                  Margin="0">
                <Grid.ColumnDefinitions>
                    <!-- 0: Opcje aplikacji -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- 1: Uruchomienie aplikacji -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- 2: Czas spędzony w aplikacji (dodaj jeśli zajdzie taka potrzeba -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- 3: Ostatnie uruchomienie -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- 4: Zapomniałem co to, ale ważne, jak se przypomnisz to usuń -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Opcje aplikacji -->
                <Button Grid.Column="0"
                        Content="⚙️"
                        Command="{Binding OpenSettingsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource MainGreenWideButtonStyle}"
                        Width="35"
                        HorizontalAlignment="Left"/>

                <!-- Uruchomienie aplikacji -->
                <Button Grid.Column="1"
                        Content="▶ Uruchom"
                        Command="{Binding RunAppCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Style="{StaticResource MainGreenWideButtonStyle}"
                        HorizontalAlignment="Left"/>

                <!-- Ostatnie uruchomienie -->
                <Grid Grid.Column="3" VerticalAlignment="Center" MinWidth="100" Margin="5,0,5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Ostatnie uruchomienie:"
                               Grid.Row="0"
                               VerticalAlignment="Center"
                               Margin="5,0,5,0"
                               FontSize="16"
                               Foreground="White"/>
                    <TextBlock Text="12.09.1999"
                               Grid.Row="1"
                               VerticalAlignment="Center"
                               Margin="5,0,5,0"
                               FontSize="10"
                               Foreground="White"/>
                </Grid>
            </Grid>
        </Grid>

        <ContentControl Grid.Row="1" Content="{Binding CurrentControl}"/>

    </Grid>
</UserControl>
