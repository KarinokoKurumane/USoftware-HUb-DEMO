<UserControl x:Class="USoftware_HUb.MVVM.Views.Support.ProductSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:USoftware_HUb.MVVM.Views.Support"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#3E4753" Margin="0,0,0,4">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Działania na grupie:"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   Grid.Column="0"/>

                <Button Content="▶"
                Command="{Binding RunAsGroupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Style="{StaticResource MainGroupWideButtonStyle}"
                Grid.Column="1" MinWidth="25"/>
                <Button Content="➕"
                Command="{Binding AddToGroupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Style="{StaticResource MainAddGroupWideButtonStyle}"
                Grid.Column="2" MinWidth="25"/>
                <Button Content="🗑️"
                Command="{Binding RemoveFromGroupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Style="{StaticResource MainRemoveGroupWideButtonStyle}"
                Grid.Column="3" MinWidth="25"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource DashboardGrid}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="{Binding IconImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="100" Height="100" Margin="10"/>
                <StackPanel Grid.Column="1" Margin="10">
                    <TextBlock Text="{Binding ProductName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"/>
                    <TextBlock Text="{Binding ProductDescription, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="14"
                       Foreground="White"
                       TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="33*"/>
                    <ColumnDefinition Width="34*"/>
                    <ColumnDefinition Width="33*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource DashboardGrid}">
                    <StackPanel>
                        <TextBlock Text="Wymagania:"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                        <TextBlock Text="Spore"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource DashboardGrid}">
                    <StackPanel>
                        <TextBlock Text="Dane Produktu:"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                        <TextBlock Text="Twórcy i takie tam"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource DashboardGrid}">
                    <StackPanel>
                        <TextBlock Text="Tagi:"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                        <TextBlock Text="Przemoc (+18)"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Border Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource DashboardGrid}">
                    <StackPanel>
                        <TextBlock Text="Dodatkowe informacje:"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"/>
                        <TextBlock Text="Informacje o wersji, licencji i inne szczegóły"
                           FontSize="14"
                           Foreground="White"
                           TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource DashboardGrid}">
                    <StackPanel>
                        <TextBlock Text="Wersja:"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"/>
                        <TextBlock Text="1.0.0"
                           FontSize="14"
                           Foreground="White"/>
                        <TextBlock Text="Licencja:"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="White"/>
                        <TextBlock Text="MIT"
                           FontSize="14"
                           Foreground="White"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
