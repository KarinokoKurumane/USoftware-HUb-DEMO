<UserControl x:Class="USoftware_HUb.MVVM.Views.Pages.HelpPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:USoftware_HUb.MVVM.Views.Pages"
             xmlns:viewModel="clr-namespace:USoftware_HUb.MVVM.ViewModel.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>

        <!-- Lewa strona -->
        <StackPanel Grid.Column="0" Margin="20" HorizontalAlignment="Right">
            <TextBlock Text="Opis aplikacji" FontSize="20" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Lubie placki..." TextWrapping="Wrap" Margin="0,10,0,20" Foreground="White"/>
            <TextBlock Text="FAQ" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
            <TextBlock Text="Czy lubisz placki?" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
            <TextBlock Text="Jeszcze jak." TextWrapping="Wrap" Margin="0,10,0,20" Foreground="White"/>
            <!-- Lista pytań -->
        </StackPanel>

        <!-- Prawa strona -->
        <Grid Grid.Column="1" Margin="20" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Informacje o HUB -->
            <StackPanel Grid.Row="0">
                <Image Source="/Assets/LOGO_U.ico" Width="100" Height="100" />
                <TextBlock Text="USoftwareHUB" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Producent: Karinoko Software" Foreground="White"/>
                <TextBlock Text="Wersja: 1.2.0" Foreground="White"/>
            </StackPanel>

            <!-- Dolna część -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Kontakt / Zgłoś problem" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                <TextBlock Text="Email: support@karinoko.dev" Foreground="White"/>
                <TextBlock Text="Github: support@karinoko.dev" Foreground="White"/>
                <TextBlock Text="Discord: support@karinoko.dev" Foreground="White"/>
                <Button Content="Wyślij opinię" Width="150" Margin="0,10,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
