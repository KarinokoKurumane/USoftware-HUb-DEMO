<UserControl x:Class="USoftware_HUb.MVVM.Views.Pages.ShopPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:USoftware_HUb.MVVM.Views.Pages"
             xmlns:browser="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:viewModel="clr-namespace:USoftware_HUb.MVVM.ViewModel.Pages">
    
    <Grid>
        <browser:WebView2 x:Name="UBrowser"
                          Source="{Binding ShopUrl}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Margin="1"/>
    </Grid>
</UserControl>
