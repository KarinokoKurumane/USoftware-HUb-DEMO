<UserControl x:Class="USoftware_HUb.MVVM.Views.Pages.ProductPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:USoftware_HUb.MVVM.Views"
             xmlns:support="clr-namespace:USoftware_HUb.MVVM.Views.Support"
             xmlns:viewModel="clr-namespace:USoftware_HUb.MVVM.ViewModel.Pages">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#FF1A1A1A">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
                    <Button Content="Programy" Command="{Binding ShowProgramsCommand}" Style="{StaticResource MainWideButtonStyle}" Margin="0,5"/>
                    <Button Content="Gry" Command="{Binding ShowGamesCommand}" Style="{StaticResource MainWideButtonStyle}" Margin="0,5"/>
                </StackPanel>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding DisplayItems}"
                         SelectedItem="{Binding SelectedProduct}"
                         ItemContainerStyle="{StaticResource ListBoxItemStyle}"
                         BorderThickness="0"
                         Background="#FF1A1A1A">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Image Source="{Binding IconPath}" Width="30" Height="30" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>

            <support:ProductSheet Grid.Column="1"
                                  OpenSettingsCommand="{Binding OpenSettingsCommand}"
                                  RunAppCommand="{Binding RunAppCommand}"
                                  RunAsGroupCommand="{Binding RunAsGroupCommand}"
                                  AddToGroupCommand="{Binding AddToGroupCommand}"
                                  RemoveFromGroupCommand="{Binding RemoveFromGroupCommand}"
                                  ProductName="{Binding SelectedProduct.Name}"
                                  ProductDescription="{Binding SelectedProduct.Description}"
                                  BannerImageSource="{Binding SelectedProduct.BannerPath}"
                                  IconImageSource="{Binding SelectedProduct.IconPath}"/>
        </Grid>
    </Grid>
</UserControl>
