<UserControl x:Class="USoftware_HUb.MVVM.Views.Pages.ProductPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:USoftware_HUb.MVVM.Views"
             xmlns:viewModel="clr-namespace:USoftware_HUb.MVVM.ViewModel.Pages">

    <!--<UserControl.DataContext>
        <viewModel:ProductPageViewModel/>
    </UserControl.DataContext>-->
    
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#FF1A1A1A">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
                    <Button Content="Programy" Command="{Binding ShowProgramsCommand}" Style="{StaticResource MainWideButtonStyle}" Margin="0,5"/>
                    <Button Content="Gry" Command="{Binding ShowGamesCommand}" Style="{StaticResource MainWideButtonStyle}" Margin="0,5"/>
                </StackPanel>

                <ListBox Grid.Row="1" ItemsSource="{Binding DisplayItems}" ItemContainerStyle="{StaticResource ListBoxItemStyle}" BorderThickness="0" Background="#FF1A1A1A">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Image Source="{Binding IconPath}" Width="30" Height="30" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>
            <local:ProductDetails Grid.Column="1"/>
        </Grid>
    </Grid>
</UserControl>
