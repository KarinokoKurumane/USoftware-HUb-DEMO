<Window x:Class="USofware_HUb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:USofware_HUb.Controls"
        xmlns:local="clr-namespace:USofware_HUb.MVVM.Views"
        xmlns:viewModel="clr-namespace:USofware_HUb.MVVM.ViewModel"
        Title="MainWindow" Height="650" Width="800" Background="#FF131313" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Grid>

        <c:TitleBar Height="32" VerticalAlignment="Top" />

        <Rectangle Height="1" Fill="#FF262626" VerticalAlignment="Top" Margin="0,30,0,0"/>

        <Grid Margin="0,32,0,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#FF1A1A1A">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
                    <Button Content="Programy" Command="{Binding ShowProgramsCommand}" Style="{StaticResource MainWideButtonStyle}" Margin="0,5"/>
                    <Button Content="Gry" Command="{Binding ShowGamesCommand}" Style="{StaticResource MainWideButtonStyle}" Margin="0,5"/>
                </StackPanel>

                <ListBox Grid.Row="1" ItemsSource="{Binding DisplayItems}" ItemContainerStyle="{StaticResource ListBoxItemStyle}" BorderThickness="0" Background="#FF1A1A1A">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Image Source="{Binding IconPath}" Width="30" Height="30" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            
            </Grid>
            <local:ProductDetails Grid.Column="1"/>
        </Grid>
        <c:StatusBar VerticalAlignment="Bottom"/>


    </Grid>
</Window>
